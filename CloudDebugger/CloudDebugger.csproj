<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<PlatformTarget>x64</PlatformTarget>
		<InvariantGlobalization>true</InvariantGlobalization>
		<SatelliteResourceLanguages>en-US</SatelliteResourceLanguages>
		<ResourceLanguages>en</ResourceLanguages>
	</PropertyGroup>

	<ItemGroup>
		<Compile Remove="wwwroot\NewFolder\**" />
		<Content Remove="wwwroot\NewFolder\**" />
		<EmbeddedResource Remove="wwwroot\NewFolder\**" />
		<None Remove="wwwroot\NewFolder\**" />
	</ItemGroup>

	<ItemGroup>

		<PackageReference Include="Azure.Messaging.EventGrid" Version="4.25.0" />
		<PackageReference Include="Azure.Messaging.EventHubs" Version="5.11.5" />
		<PackageReference Include="Flurl.Http" Version="4.0.2" />
		<PackageReference Include="Microsoft.ApplicationInsights.AspNetCore" Version="2.22.0" />
		<PackageReference Include="Microsoft.Azure.StackExchangeRedis" Version="3.1.0" />
		<PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="8.0.8" />
		<PackageReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Design" Version="8.0.5" />
		<PackageReference Include="Serilog.AspNetCore" Version="8.0.2" />
		<PackageReference Include="System.Formats.Asn1" Version="8.0.1" />
		<PackageReference Include="Azure.Storage.Blobs" Version="12.22.0-beta.1" />
		<PackageReference Include="Azure.Storage.Blobs.ChangeFeed" Version="12.0.0-preview.48" />

	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\MyAzureIdentity\MyAzureIdentity.csproj" />
		<ProjectReference Include="..\MyHttpLogging\MyHttpLogging.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Content Update="Features\AppServices\Benchmark.cshtml">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
		</Content>
		<Content Update="Features\FileSystem\Index.cshtml">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
		</Content>
	</ItemGroup>


	<!--Set the build date https://stackoverflow.com/a/50607951/68490-->
	<PropertyGroup>
		<Copyright>$([System.DateTime]::UtcNow.ToString("HH:mm:ss"))</Copyright>
	</PropertyGroup>

</Project>
